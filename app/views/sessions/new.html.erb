<h1>Log In!</h1>

<%= form_tag(login_path) %>
  <p><%= label_tag 'user[name]' %>
  <%= text_field_tag :name %></p>
  <p><%= label_tag 'user[password]' %>
  <%= password_field_tag :password %></p>
  <p><%= label_tag 'user[password_confirmation]' %>
  <%= password_field_tag :password_confirmation %></p>
  <%= submit_tag 'Log In'%>

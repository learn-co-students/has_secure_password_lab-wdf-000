 <h1>Login</h1>
 <hr />
 <%= form_for :user, url: '/login' do |f| %>
   Username: <%= f.text_field :name %> <br />
   Password: <%= f.password_field :password %> <br />
   Password Confirmation: <%= f.password_field :password_confirmation %> <br />
   <%= f.submit "Login", class: "btn btn-primary" %>
 <% end %>

 <p>or click signup to create an account</p>

 <%= button_to 'Signup', signup_path, :method => :get %>
